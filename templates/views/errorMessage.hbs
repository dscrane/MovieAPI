<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
</head>

<body>
  <div id="error-message">
    <div>You need to be signed in to access this page</div>
    <br>
    <div>You will be redirected to the home page in <span id="countdown">5</span> seconds</div>
  </div>
  <script>
    const countdownNumber = document.querySelector('#countdown');
    let timer = 5;
    setInterval(() => {
      countdownNumber.innerHTML = timer -= 1;
    }, 1000)
    setTimeout(() => window.location.href = 'http://localhost:3000/', 5000)
  </script>
</body>

</html>